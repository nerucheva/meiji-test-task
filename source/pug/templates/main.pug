include ../global/_mixins
doctype html
html(lang="ru")
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible' content='ie=edge')
    title
      block title
    meta(name='description' content='')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='shortcut icon' type='image/x-icon' href='favicon.ico')
    //- add '?@@timestamp' postfix to assets files (styles, scripts, images...) for fix browser caching problems
    link(rel='stylesheet' href='css/style.min.css?@@timestamp')

    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Play:wght@400;700&display=swap" rel="stylesheet")


  body#body
    .page-wrapper
      block variables
        include ../global/_variables

      block header
        include ../global/header

      block main

      block modal

    script(src='js/script.min.js?@@timestamp')
