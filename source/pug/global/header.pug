header.header
  .container.header-wrapper
       img(src='img/logo.svg').logo
       img(src='img/icons/menu.svg' id='burger').burger-menu

  .navigation-wrapper#navigation-wrapper
       nav.navigation
           ul.navigation__list
               li.navigation__list-item
                   a(href='#').navigation__link Продукты
               li.navigation__list-item
                   a(href='#').navigation__link Технологии
               li.navigation__list-item
                   a(href='#').navigation__link Experience

       ul.social-media
           li.social-media__item
             a(href='https://twitter.com/').social-media__link
                 img(src='img/icons/icons-tw.svg' target='blank').social-media__icon
           li.social-media__item
              a(href='https://www.instagram.com/' target="blank").social-media__link
                 img(src='img/icons/icons-inst.svg').social-media__icon
